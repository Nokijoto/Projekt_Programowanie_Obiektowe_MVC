@using Projekt_MVC.Models.Car;
@model Projekt_MVC.Models.Car.CarViewModel
@{
    ViewData["Title"] = "Car Models";
    var l= $"NewTestDrive?CarID=";
}
<style>
    body {
        background-color: black;
    }
</style>
<div>
    <h1 class="display-4 text-center link-light">Dostępne modele</h1>
    <br />

    <a class="btn btn-primary btn-lg d-flex justify-content-center w-100" asp-area="" asp-controller="CarList" asp-action="NewCar" role="button">Dodaj samochód</a>
    <p></p>
    <div>
        
        @foreach(var item in Model.Cars)
         {
             
           
             <a class="btn btn-primary btn-sm float-start" asp-controller="CarList" asp-action="DeleteCar" asp-route-id="@item.CarID" role="button">Delete</a>
            <a class="btn btn-primary btn-sm float-end" asp-controller="CarList" asp-action="EditCar" asp-route-id="@item.CarID" role="button">Edit</a>
            <figure class="figure mx-auto d-block">
                <img src="https://i.gyazo.com/70b495f0650829dffb7157db64c5ef03.png" class="rounded mx-auto d-block" alt="...">


                <h5><figcaption class="figure-caption text-center link-light">ID: @item.CarID<p></p>Marka: @item.Name  <p></p>    Model: @item.Model <p></p></figcaption></h5>
                <h5><figcaption class="figure-caption text-center link-light">Moc silnika (KM): @item.HorsePower <p></p> Silnik: @item.Engine <p></p> </figcaption></h5>
                <h5><figcaption class="figure-caption text-center link-light">Opis: @item.Description <p></p></figcaption></h5>
                <span><a class="btn btn-primary btn-md mx-auto d-block" href="@Url.Action("NewTestDrive", "TestDrive",  new { CarID=@item.CarID})">Zarezerwuj Jazdę</a></span>
            

        </figure>
        <br />
        }
    </div>
 


   
</div>