@{
    ViewData["Title"] = "Create Car";
}
<form method="post" asp-controller="Car" asp-action="CreateNewCar">
    <div class="form-group">
        <label for="id">ID</label>
        <input type="number" class="form-control" id="id" name="id" placeholder="Enter ID">
    </div>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label for="name">City</label>
        <input type="text" class="form-control" id="city" name="city" placeholder="City">
    </div>
    <div class="form-group">
        <label for="name">Gender</label>
        <input type="number" class="form-control" id="gender" name="gender" placeholder="Gender">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>