@{
    ViewData["Title"] = "Create Car";
   
 
}
<form method="post" asp-controller="CarList" asp-action="CreateNewCar">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">

    </div>
    <div class="form-group">
        <label for="model">Model</label>
        <input type="text" class="form-control" id="model" name="model" placeholder="Enter Model">
    </div>
    <div class="form-group">
        <label for="year">Year</label>
        <input type="text" class="form-control" id="year" name="year" placeholder="Enter Year">
    </div>
    <div class="form-group">
        <label for="color">Color</label>
        <input type="text" class="form-control" id="color" name="color" placeholder="Enter Color">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="Enter Price">
    </div>
    <div class="form-group">
        <label for="mileage">Description</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Enter Description">
    </div>
    <div class="form-group">
        <label for="mileage">Engine</label>
        <select id="Engine" name="Engine" class="form-control" required asp-items="@Model.Engine"></select>
    </div>
    <div class="form-group">
        <label for="mileage">HorsePower</label>
        <input type="number" class="form-control" id="horsepower" name="horsepower" placeholder="Enter HorsePower">
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>