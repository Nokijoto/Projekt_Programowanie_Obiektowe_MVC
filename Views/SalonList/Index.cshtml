@model Projekt_MVC.Models.Salon.SalonListViewModel
@{
    ViewData["Title"] = "SalonList";
}
<style>
    body {
        background-color: black;
        
    }
</style>
<a asp-controller="SalonList" asp-action="NewSalon" role="button">Dodaj Salon</a>
<table class="table text-light">
    <thead>
        <tr>
            <th scope="row">ID</th>
            <th scope="row">Name</th>
            <th scope="row">Address</th>
            <th scope="row">Phone</th>
            <th scope="row">Email</th>
            <th scope="row">OpenHours</th>
            <th scope="row">OpenDays</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetSalons)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <th scope="row">@item.Name</th>
                <th scope="row">@item.Address</th>
                <th scope="row">@item.Phone</th>
                <th scope="row">@item.Email</th>
                <th scope="row">@item.OpenHours</th>
                <th scope="row">@item.OpenDays</th>
                <td>
                    
                   <a class="btn btn-primary btn-sm float-start" asp-controller="SalonList" asp-action="DeleteSalonList" asp-route-id="@item.ID" role="button">Delete</a>
                   <a class="btn btn-primary btn-sm float-end" asp-controller="SalonList" asp-action="EditSalonList" asp-route-id="@item.ID" role="button">Edit</a>
            <figure class="figure mx-auto d-block">
                </td>
            </tr>
        }
    </tbody>
</table>