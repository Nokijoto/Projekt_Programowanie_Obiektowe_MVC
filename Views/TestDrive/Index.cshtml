@model Projekt_MVC.Models.TDriveModel.TestDriveViewModel
@{
    ViewData["Title"] = "TestDrives";
}

<table class="table">
    <thead>
        <tr>
            <th scope="row">ID</th>
            <th scope="row">Imie</th>
            <th scope="row">Nazwisko</th>
            <th scope="row">Pesel</th>
            <th scope="row">Data</th>
            <th scope="row">nrTel<th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TestDrives)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <th scope="row">@item.Imie</th>
                <th scope="row">@item.Nazwisko</th>
                <th scope="row">@item.Pesel</th>
                <th scope="row">@item.Data</th>
                <th scope="row">@item.NrTel<th>
                <td>
                   
                    <a asp-controller="TestDrive" asp-action="DeleteTestDrive" asp-route-id="@item.ID">Delete</a>
                    <a asp-controller="TestDrive" asp-action="EditTestDrive" asp-route-id="@item.ID">Edit</a>
                </td>
            </tr>
        }
        <a class="btn btn-primary btn-sm text-right" asp-area="" asp-controller="TestDrive" asp-action="NewTestDrive" role="button">Dodaj Jazde</a>
    </tbody>
</table>